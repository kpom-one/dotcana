digraph lorcana {

    // ---- Game State ----
    game [type="Game", turn="0"];

    // ---- Players ----
    p1 [type="Player", lore="0", ink_drops="1", ink_total="0", ink_available="0"];
    p2 [type="Player", lore="0", ink_drops="1", ink_total="0", ink_available="0"];

    game -> p1 [label="CURRENT_TURN"];

    // ---- Zones ----
    "z.p1.hand"    [type="Zone", kind="hand"];
    "z.p1.deck"    [type="Zone", kind="deck"];
    "z.p1.ink"     [type="Zone", kind="inkwell"];
    "z.p1.play"    [type="Zone", kind="play"];
    "z.p1.discard" [type="Zone", kind="discard"];

    "z.p2.hand"    [type="Zone", kind="hand"];
    "z.p2.deck"    [type="Zone", kind="deck"];
    "z.p2.ink"     [type="Zone", kind="inkwell"];
    "z.p2.play"    [type="Zone", kind="play"];
    "z.p2.discard" [type="Zone", kind="discard"];

    // ---- Zone Ownership ----
    "z.p1.hand"    -> p1 [label="OWNS"];
    "z.p1.deck"    -> p1 [label="OWNS"];
    "z.p1.ink"     -> p1 [label="OWNS"];
    "z.p1.play"    -> p1 [label="OWNS"];
    "z.p1.discard" -> p1 [label="OWNS"];

    "z.p2.hand"    -> p2 [label="OWNS"];
    "z.p2.deck"    -> p2 [label="OWNS"];
    "z.p2.ink"     -> p2 [label="OWNS"];
    "z.p2.play"    -> p2 [label="OWNS"];
    "z.p2.discard" -> p2 [label="OWNS"];

}
